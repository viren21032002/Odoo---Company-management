<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="department_data_tree_view" model="ir.ui.view">
        <field name="name">department.data.tree.view</field>
        <field name="model">department.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="department_data_form_view" model="ir.ui.view">
        <field name="name">department.data.form.view</field>
        <field name="model">department.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="department_data_action">
        <field name="name">department data</field>
        <field name="res_model">department.data</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="department data"
              id="department_data_menu"
              parent="company_management"
              action="department_data_action"
              sequence="2"/>
</odoo>