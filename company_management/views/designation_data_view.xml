<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="designation_data_tree_view" model="ir.ui.view">
        <field name="name">designation.data.tree.view</field>
        <field name="model">designation.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="designation_data_form_view" model="ir.ui.view">
        <field name="name">designation.data.form.view</field>
        <field name="model">designation.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="designation_data_action">
        <field name="name">designation data</field>
        <field name="res_model">designation.data</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="designation data"
              id="designation_data_menu"
              parent="company_management"
              action="designation_data_action"
              sequence="3"/>
</odoo>